<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="ShelfConfiguration" type="Topshelf.Shelving.ShelfConfiguration, TopShelf" />
  </configSections>

  <ShelfConfiguration Bootstrapper="StuffOnAShelf.AShelvedClock, StuffOnAShelf" />
  
  <appSettings>
    <add key="name" value="Coocoo" />

		<!-- There are several bad tidings that can be performed: failToCreate, failToStart, crashAfterStart -->
		<add key="badTidings" value="none" />
  </appSettings>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
        <arg key="configType" value="FILE-WATCH" />
        <arg key="configFile" value="~\log4net.config" />
      </factoryAdapter>
    </logging>
  </common>
  
</configuration>